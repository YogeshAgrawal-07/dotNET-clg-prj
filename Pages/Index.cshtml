@page
@model IndexModel
@{
    ViewData["Title"] = "Yogesh Agrawal - Links";
}

<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #0d1117;
        overflow-x: hidden;
    }

    @@keyframes gradient-shift {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .animated-background {
        background: linear-gradient(-45deg, #0d1117, #161b22, #003b33, #0d1117);
        background-size: 400% 400%;
        animation: gradient-shift 60s ease infinite;
    }

    .link-button {
        box-shadow: 0 8px 15px -3px rgba(0, 0, 0, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.2);
    }

        .link-button:hover {
            transform: translateY(-3px) scale(1.03);
        }
</style>

<div class="animated-background min-h-screen flex flex-col items-center justify-center px-4 py-10">

    <!-- Profile Section -->
    <header class="text-center space-y-4 mb-10">
        <div class="relative inline-block group">
            <img src="/images/YA initial.png"
                 alt="Profile picture of Yogesh Agrawal"
                 class="w-28 h-28 mx-auto rounded-full object-cover border-4 border-emerald-400 shadow-xl transition-transform duration-500 group-hover:scale-105" />
            <div class="absolute inset-0 rounded-full border-4 border-transparent transition-all duration-500 group-hover:border-emerald-600 group-hover:shadow-2xl group-hover:shadow-emerald-500/50"></div>
        </div>

        <h1 class="text-4xl font-bold text-white tracking-wide">Yogesh Agrawal</h1>
        <p class="text-gray-400 text-lg">Aspiring Developer & C# Enthusiast</p>
    </header>

    <!-- Links Section -->
    <main class="w-full max-w-md space-y-4">
        @foreach (var link in Model.Links)
        {
            <a href="@link.Url" target="_blank"
               class="link-button block w-full p-4 text-center text-white bg-gray-800/80
                          hover:bg-emerald-600 rounded-xl border border-gray-700 hover:border-emerald-500
                          font-semibold text-lg tracking-wider transition-all duration-300 ease-out">
                @link.Title
            </a>
        }
    </main>

    <footer class="text-center mt-12 text-gray-500 text-sm border-t border-gray-800 pt-6">
        © 2025 Yogesh Agrawal
    </footer>

</div>
